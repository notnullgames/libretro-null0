{
  "name": "carts",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "build:host": "cmake -B build . && make -C build",
    
    "build:draw": "node tools/build.mjs draw",
    "build:errors": "node tools/build.mjs errors",
    "build:files": "node tools/build.mjs files",
    "build:http": "node tools/build.mjs http",
    "build:justlog": "node tools/build.mjs justlog",
    "build:random": "node tools/build.mjs random",

    "gen:json": "node tools/genjson.mjs > tools/api.json",
    "gen:as": "NODE_NO_WARNINGS=1 node tools/genas.mjs > src/carts/null0.ts",
    "gen:host": "NODE_NO_WARNINGS=1 node tools/genhost.mjs > src/null0_host.h",
    "test": "node src/test.js"
  },
  "devDependencies": {
    "archiver": "^5.3.1",
    "assemblyscript": "^0.26.2",
    "shelljs": "^0.8.5"
  },
  "type": "module"
}
